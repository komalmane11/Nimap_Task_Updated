@model ProductTask.Models.Product

@{
    ViewBag.Title = "Delete Product";
}

<h2>Delete Product</h2>

<p>Are you sure you want to delete the product "@Model.ProductName"?</p>

<form method="post">
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Cancel</a>
</form>
